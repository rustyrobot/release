#!/usr/bin/make -f
# -*- makefile -*-

#export DH_VERBOSE=1

build:
	echo noop

binary:
	mkdir -p usr/bin
	curl  --fail -sS -L \
		-o usr/bin/kubelet \
		"https://storage.googleapis.com/kubernetes-release/release/v{{ .Version }}/bin/linux/{{ .Arch }}/kubelet"
	chmod +x usr/bin/kubelet
	dh_testroot
	dh_auto_install
	dh_shlibdeps
	dh_install
	dh_systemd_enable
	dh_installinit
	dh_systemd_start
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

%:
	dh $@ --with systemd
